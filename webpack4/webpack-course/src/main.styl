$bg-color = saddlebrown

body
  margin: 0
  background-color: $bg-color

.profile
  height: 100vh
  display: flex
  align-items: center
  justify-content: center
  flex-flow: column

  img
    border-radius: 100%
    width: 300px
    box-shadow: 0 0 20px green

  h1

    color: white
    font-size: 5em
    font-family: "Roboto", sans-serif
    text-shadow: 0 0 20px black
